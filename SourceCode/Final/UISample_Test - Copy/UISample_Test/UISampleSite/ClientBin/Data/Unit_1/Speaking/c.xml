  <Text Style="H2"><![CDATA[Including Tables]]></Text>
  <Newline />
  <Text Style="Normal"><![CDATA[With the Liquid Rich TextBox you can now insert tables, the three example styles are just a tiny selection of possible table styles.  Try hovering the mouse over the cell lines and re-sizing the rows and columns.]]></Text>
  <Newline />
  <Newline />
  <Xaml>
    <liquid:Table HeaderRows="1" HeaderColumns="0" AutoWidth="True" Tag="TableBlue">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="1*"/>
      </Grid.RowDefinitions>
      <Border Grid.Column="0" Grid.Row="0">
        <liquid:RichTextBlock Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
              &lt;Text Style="Bold"&gt;&lt;![CDATA[Control Name]]&gt;&lt;/Text&gt;
              &lt;/LiquidRichText&gt;
            </TextBlock>
          </liquid:RichTextBlock.DirectRichText>
        </liquid:RichTextBlock>
      </Border>
      <Border Grid.Column="1" Grid.Row="0">
        <liquid:RichTextBlock VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
              &lt;Text Style="Bold"&gt;&lt;![CDATA[Description]]&gt;&lt;/Text&gt;
              &lt;/LiquidRichText&gt;
            </TextBlock>
          </liquid:RichTextBlock.DirectRichText>
        </liquid:RichTextBlock>
      </Border>
      <Border Grid.Column="2" Grid.Row="0">
        <liquid:RichTextBlock VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
              &lt;Text Style="Bold"&gt;&lt;![CDATA[Usage]]&gt;&lt;/Text&gt;
              &lt;/LiquidRichText&gt;
            </TextBlock>
          </liquid:RichTextBlock.DirectRichText>
        </liquid:RichTextBlock>
      </Border>
      <Border Grid.Column="0" Grid.Row="1">
        <liquid:RichTextBlock VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
              &lt;Text Style="Normal"&gt;&lt;![CDATA[Liquid.RichTextBox]]&gt;&lt;/Text&gt;
              &lt;/LiquidRichText&gt;
            </TextBlock>
          </liquid:RichTextBlock.DirectRichText>
        </liquid:RichTextBlock>
      </Border>
      <Border Grid.Column="1" Grid.Row="1">
        <liquid:RichTextBlock VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
              &lt;Text Style="Normal"&gt;&lt;![CDATA[A Rich TextBox.]]&gt;&lt;/Text&gt;
              &lt;/LiquidRichText&gt;
            </TextBlock>
          </liquid:RichTextBlock.DirectRichText>
        </liquid:RichTextBlock>
      </Border>
      <Border Grid.Column="2" Grid.Row="1">
        <liquid:RichTextBlock VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
              &lt;Text Style="Normal"&gt;&lt;![CDATA[Can be used in Forum and CMS applications.]]&gt;&lt;/Text&gt;
              &lt;/LiquidRichText&gt;
            </TextBlock>
          </liquid:RichTextBlock.DirectRichText>
        </liquid:RichTextBlock>
      </Border>
      <Border Grid.Column="0" Grid.Row="2">
        <liquid:RichTextBlock VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" IsReadOnly="False">
          <liquid:RichTextBlock.DirectRichText>
            <TextBlock>
              &lt;LiquidRichText xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"&gt;
