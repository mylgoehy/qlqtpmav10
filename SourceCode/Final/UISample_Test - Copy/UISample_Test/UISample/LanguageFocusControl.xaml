	</UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<Rectangle x:Name="rctBackground" Fill="#FF00172E" Opacity="0.35" StrokeThickness="0" Height="450" Margin="0" Width="728"/>
		<TextBlock x:Name="txbTitle" Height="28" Width="238" TextWrapping="Wrap" Foreground="#FFFFFEFE" Text="Language Focus" FontSize="18.667" FontWeight="Bold" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
		<Grid x:Name="gridGrammar" Margin="3,38,-207,0" RenderTransformOrigin="0.5,0.5" Width="932" Height="412" d:IsHidden="True">
			<Grid.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform/>
					<TranslateTransform/>
				</TransformGroup>
			</Grid.RenderTransform>
			<Liquid:RichTextBox x:Name="rtb_Grammar" Margin="2,8,249,38" Text="vvvv" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5">
				<Liquid:RichTextBox.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Liquid:RichTextBox.RenderTransform>
			</Liquid:RichTextBox>
			<Liquid:RichTextBox x:Name="rtb_Answer" HorizontalAlignment="Right" Width="149" Text="RichTextBox" TextWrapping="Wrap" Height="411" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Background="#FF1D252D" Foreground="White" Margin="0,0,31,0">
				<Liquid:RichTextBox.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Liquid:RichTextBox.RenderTransform>
			</Liquid:RichTextBox>
			<Button x:Name="btnTriangle" Style="{StaticResource triangleButton}" Width="20.866" OpacityMask="Black" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" Foreground="Black" Content="Button" d:LayoutRounding="Auto" HorizontalAlignment="Right" Margin="0,141.726,209.128,180.267" Click="btnTriangle_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform Angle="0.266"/>
						<TranslateTransform/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>
			<Rectangle x:Name="rectangle" Fill="White" StrokeThickness="0" Height="38" Margin="2,0,249,0" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5">
				<Rectangle.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Rectangle.RenderTransform>
			</Rectangle>
			<TextBox x:Name="tb_Page" Background="#FFE2E2E2" BorderThickness="0" Height="34" HorizontalAlignment="Left" Margin="309,0,0,2" VerticalAlignment="Bottom" Width="72" IsReadOnly="True" TextWrapping="Wrap" FontSize="29.333" FontFamily="Times New Roman" TextAlignment="Center" RenderTransformOrigin="0.5,0.5">
				<TextBox.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</TextBox.RenderTransform>
			</TextBox>
			<Image x:Name="bnt_right" Height="29" HorizontalAlignment="Right" Margin="0,0,271,3" VerticalAlignment="Bottom" Width="48" MouseLeftButtonDown="bnt_right_MouseLeftButtonDown" Source="next-icon.png" OpacityMask="Black" RenderTransformOrigin="0.5,1.828">
				<Image.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Image.RenderTransform>
			</Image>
			<Image x:Name="bnt_left" Height="29" HorizontalAlignment="Left" Margin="29,0,0,4" VerticalAlignment="Bottom" Width="48" OpacityMask="Black" MouseLeftButtonDown="bnt_left_MouseLeftButtonDown" Source="back-icon.png"/>
			<Image x:Name="bnt_delete" Height="29" HorizontalAlignment="Right" Margin="0,8,249,0" VerticalAlignment="Top" Width="48" OpacityMask="Black" MouseLeftButtonDown="bnt_delete_MouseLeftButtonDown" Source="delete-icon.png" RenderTransformOrigin="0.5,0.5">
				<Image.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Image.RenderTransform>
			</Image>
		</Grid>
		<Button x:Name="buttonGrammar" Height="32" Margin="296,6,328,0" VerticalAlignment="Top" Content="Grammar" Click="buttonGrammar_Click" RenderTransformOrigin="0.5,0.5" Background="{x:Null}">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button x:Name="bHideShow" Height="32" HorizontalAlignment="Right" Margin="0,6,216,0" VerticalAlignment="Top" Width="96" Content="Pronunciation" Background="{x:Null}" Click="bHideShow_Click"/>
		<Canvas x:Name="cvMainPronun" Margin="14,41,22,4" Background="White">
			<Canvas x:Name="cvContent" Height="120" Width="596" Canvas.Left="56" Canvas.Top="8">
				<Rectangle x:Name="rctbkContent" Fill="#FF77BB82" StrokeThickness="0" Height="120" Width="614" Canvas.Left="-18"/>
				<TextBlock x:Name="tlockContent" Height="120" Width="614" FontSize="16" FontWeight="Bold"  TextWrapping="Wrap" Canvas.Left="-18"/>
			</Canvas>
			<TextBlock x:Name="txbpronun" Height="26" Width="191" Canvas.Left="15" Canvas.Top="125" FontSize="14.667" Text="* Listen and repeat" TextWrapping="Wrap" FontWeight="Bold" Foreground="#FF0A0A0A"/>
			<ListBox x:Name="listword" Height="106" Width="692" Canvas.Top="167" Background="{x:Null}"/>
			<Canvas x:Name="cvPronun" Grid.Column="1" Grid.Row="1" Height="27" Width="677" Canvas.Left="15" Canvas.Top="142"/>
			<TextBlock x:Name="txbpractise" Height="26" Width="239" Canvas.Left="15" Canvas.Top="273" FontSize="14.667" Text="* Practise these sentences." TextWrapping="Wrap" FontWeight="Bold"/>
			<ListBox x:Name="lbPractise" Height="112" Width="677" BorderThickness="0" FontSize="16" Canvas.Left="15" Canvas.Top="293"/>
			<MediaElement x:Name="iTem" AutoPlay="False"/>
		</Canvas>
	</Grid>
</UserControl>