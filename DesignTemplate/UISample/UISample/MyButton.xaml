<UserControl x:Class="UISample.MyButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="212" Height="25">
    
    
    
    <Grid x:Name="LayoutRoot">
        <TextBlock x:Name="txb" FontSize="16" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" Cursor="Hand" Margin="31,0,30,0"/>
        <Rectangle x:Name="rct" Fill="#FF0095D9" Stroke="Black" RadiusX="10" RadiusY="10" Opacity="0" Cursor="Hand" MouseMove="rct_MouseMove" MouseLeave="rct_MouseLeave" MouseLeftButtonDown="rct_MouseLeftButtonDown"/>
    </Grid>
</UserControl>
